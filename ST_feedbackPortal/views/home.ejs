<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title> dashboard </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b07c4a6bf3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/user_dashboard.css">
  </head>

<body id="page" class="container-fluid" >
    <div class="container-fluid" id="head">
        <div class="jumbotron">
            <div class="row">
                <div class=" col-md-6 col-sm-12 row">
                    <div class="thumbnail pl-3">
                        <img src="my-image.jpg">
                    </div>
                    <span id="profileName" class="px-5"><%= name %></span>
                </div>
                <div class="col-md-6 col-sm-12 row py-0">
                    <div class="card" style="max-height: 0;">
                        <div class="card-body">                          
                            <h1 class="card-title">User Info.</h1>
                            <h2 class="card-subtitle mb-2 text-muted"><%= id%></h2>
                            <h2 class="card-subtitle mb-2 text-muted"><%= email%></h2>
                            <h2 class="card-subtitle mb-2 text-muted"><%= phone_no%></h2>
                            <h2 class="card-subtitle mb-2 text-muted"><%= department_name%></h2>
  
                          <a href="#" class="card-link" style="font-size: 2rem;">Profile</a>
                        </div>
                    </div>
                </div>
            </div>                
        </div>
    </div>

    <div id="region-main" class="container-fluid">
        <div class="card mb-3">
            <div class="card-title d-inline">
                <h5 style="margin: 2rem;">Feedback overview</h5>
            </div>
            <div>
                <div class="tabContainer"> 
                    <div class="buttonContainer text-center">
                        <div class="row">   
                            <button class="text-center" onclick="showPanel(0,'#d7d4d4', '1px solid rgba(0,0,0,.35)')" >Timeline</button>
                            <button class="text-center" onclick="showPanel(1,'#d7d4d4', '1px solid rgba(0,0,0,.35)')">courses</button>
                            <div style="border-bottom: 1px solid rgba(0,0,0,.35);width: 50%;"></div>
                        </div>
                    </div>
                    <div class="tabPanel">
                        <div class="row">
                            <div class="col-lg-4">
                                
                            </div>
                        </div>
                    </div>
                    <div class="tabPanel">
                        <div class="row">
                            <div class="col-lg-4">
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script  src="/js/user_dashboard.js"></script>
</body>

</html>